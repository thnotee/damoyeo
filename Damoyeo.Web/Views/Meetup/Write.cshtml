@section scripts{

    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=2c03537489f069ffcb99fac73dd5028f"></script>
    <script>

        //사진 업로드
        $(document).ready(function () {
            $('.img_up_btn input[type=file]').change(function (event) {
                var file = event.target.files[0];
                var reader = new FileReader();
                var inputElement = this; // 현재 input[type=file] 요소를 저장합니다.

                reader.onload = function (event) {
                    var imgBoxMain = $(inputElement).closest('.img_up_btn').siblings('.img_common_box');

                    var img = $('<img>');
                    img.attr('src', event.target.result);
                    imgBoxMain.empty(); // 기존 이미지를 지우고
                    imgBoxMain.append(img); // 새 이미지를 추가합니다.

                    var newHtml = `
                                                  <div class="after_btn">
                                                      <label> 사진 변경
                                                          <input type="file" class="file_upload_new" style="display: none;">
                                                      </label>
                                                      <span class="delete_photo">사진 삭제</span>
                                                  </div>
                                              `;

                    $(inputElement).closest('.img_up_btn').hide().after(newHtml);

                    // 새로운 사진 변경 버튼에 대한 이벤트 핸들러를 추가
                    $('.file_upload_new').change(function (event) {
                        var newFile = event.target.files[0];
                        var newReader = new FileReader();
                        var newInputElement = this; // 새로운 input[type=file] 요소를 저장합니다.

                        newReader.onload = function (event) {
                            var newImgBoxMain = $(newInputElement).closest('.after_btn').prevAll('.img_common_box').first();
                            var newImg = $('<img>');
                            newImg.attr('src', event.target.result);
                            newImgBoxMain.empty();
                            newImgBoxMain.append(newImg);
                        };

                        newReader.readAsDataURL(newFile);
                    });

                    // 사진 삭제 버튼에 대한 이벤트 핸들러를 추가
                    $('.delete_photo').click(function () {
                        var deleteBtn = this;
                        var imgBoxMainToDelete = $(deleteBtn).closest('.after_btn').prevAll('.img_common_box').first();
                        imgBoxMainToDelete.empty();
                        $(deleteBtn).closest('.after_btn').prev('.img_up_btn').show();
                        $(deleteBtn).parent('.after_btn').remove();
                    });
                };

                reader.readAsDataURL(file);
            });
        });

        //이메일 선택
        $(function () {
            $('#selectEmail').change(function () {
                $("#selectEmail option:selected").each(function () {

                    if ($(this).val() == '1') {
                        $("#selectEmail2").val('');
                        $("#selectEmail2").attr("disabled", false);
                    } else {
                        $("#selectEmail2").val($(this).text());
                        $("#selectEmail2").attr("disabled", true);
                    }
                });
            });
        });

        //글자수 제한
        $(document).ready(function () {
            var maxLength = 100;
            var $introInput = $('#introInput');
            var $charCount = $('#charCount');

            $introInput.on('input', function () {
                var textLength = $introInput.val().length;
                $charCount.text(textLength);

                if (textLength > maxLength) {
                    $introInput.val($introInput.val().substring(0, maxLength));
                    alert('최대 ' + maxLength + '자까지 입력 가능합니다.');
                    $charCount.text(maxLength);
                }
            });
        });

        //달력
        $('input[name="dates"]').daterangepicker({
            locale: {
                format: "YYYY / MM / DD",
                separator: " ~ ",
                daysOfWeek: ["일", "월", "화", "수", "목", "금", "토"],
                monthNames: ["1월", "2월", "3월", "4월", "5월", "6월", "7월", "8월", "9월", "10월", "11월", "12월"],
                applyLabel: "확인",
                cancelLabel: "취소",
            }
        });

        //멤버 입력란 숫자만
        $(document).ready(function () {
            $('#memberInput').on('input', function () {
                var inputValue = $(this).val();
                if (!/^\d*$/.test(inputValue)) {
                    alert("숫자만 입력 가능합니다.");
                    $(this).val(inputValue.replace(/\D/g, ''));
                }
            });
        });

        //미노출 선택시 비밀번호 입력창
        $(document).ready(function () {
            $('.ex_px_wrap').hide();

            $('input[type="radio"][name="expose"]').click(function () {
                $('.ex_px_wrap').toggle($('#expose2').prop('checked'));
                $('#url_pw').val('');
            });
        });

        //해시태그 입력
        $(document).ready(function () {
            $('#input_tag').keypress(function (e) {
                if (e.which == 13) {
                    e.preventDefault();
                    var text = $(this).val().trim();
                    if (text !== "") {
                        addHashTag(text);
                        $(this).val('');
                    }
                }
            });

            $(document).on('click', '.tag_del', function () {
                $(this).closest(".hash_tag").remove();
            });

            function addHashTag(text) {
                var tag = $('<span class="hash_tag"></span>');
                tag.text('#' + text);
                var icon = $('<img src="/Content/images/close.svg" class="tag_del" alt="">');
                icon.appendTo(tag);
                tag.insertBefore('#input_tag');
            }
        });


        var mapContainer = document.getElementById('map'), // 지도를 표시할 div
            mapOption = {
                center: new kakao.maps.LatLng(33.450701, 126.570667), // 지도의 중심좌표
                level: 3 // 지도의 확대 레벨
            };

        // 지도를 표시할 div와  지도 옵션으로  지도를 생성합니다
        var map = new kakao.maps.Map(mapContainer, mapOption);


        // 다각형을 구성하는 좌표 배열입니다. 이 좌표들을 이어서 다각형을 표시합니다
        var polygonPath = [
            new kakao.maps.LatLng(33.45133510810506, 126.57159381623066),
            new kakao.maps.LatLng(33.44955812811862, 126.5713551811832),
            new kakao.maps.LatLng(33.449986291544086, 126.57263296172184),
            new kakao.maps.LatLng(33.450682513554554, 126.57321034054742),
            new kakao.maps.LatLng(33.451346760004206, 126.57235740081413)
        ];

        // 지도에 표시할 다각형을 생성합니다
        var polygon = new kakao.maps.Polygon({
            path: polygonPath, // 그려질 다각형의 좌표 배열입니다
            strokeWeight: 3, // 선의 두께입니다
            strokeColor: '#39DE2A', // 선의 색깔입니다
            strokeOpacity: 0.8, // 선의 불투명도 입니다 1에서 0 사이의 값이며 0에 가까울수록 투명합니다
            strokeStyle: 'longdash', // 선의 스타일입니다
            fillColor: '#A2FF99', // 채우기 색깔입니다
            fillOpacity: 0.7 // 채우기 불투명도 입니다
        });

        // 지도에 다각형을 표시합니다
        polygon.setMap(map);
    </script>
}
