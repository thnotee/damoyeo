        }

        //지원자 정보 팝업 열고 닫기
        $(function () {


            $(".join_img_name").click(function () {
                $(".meminfo_popup").show();
                $(".meminfo_popup_dim").show();
            });

            $(".meminfo_close, .meminfo_popup_dim").click(function () {
