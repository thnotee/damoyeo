            }
        });

        //멤버 입력란 숫자만
        $(document).ready(function () {
            $('#memberInput').on('input', function () {
                var inputValue = $(this).val();
                if (!/^\d*$/.test(inputValue)) {
                    alert("숫자만 입력 가능합니다.");
                    $(this).val(inputValue.replace(/\D/g, ''));
