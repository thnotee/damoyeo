
@{
    ViewBag.Title = "비밀번호 찾기";
}

@section style{
    <link rel="stylesheet" href="~/Content/css/find.css" />
}

<form action="/Auth/FindPassword" method="post" id="myform">
    <div class="section_wrap find_wrap">
        <div class="inner sub_inner">
            <h3 class="section_title">비밀번호 찾기</h3>


            <div class="find_con">
                <div class="find_box">
                    <P class="find_notice">
                        회원가입 시 사용한 이메일을 입력해주세요.<br><br class="mo_con">
                        해당 이메일로 <span>새로운 비밀번호</span> 보내드립니다.
                    </P>
                    <div>
                        <input type="email" name="email" id="findEmail" placeholder="이메일 형식으로 입력">
                    </div>
                    <span class="big_btn" id="pwSubmit" onclick="FindPassword();">비밀번호 재설정 링크 전송</span>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @Html.Partial("~/Views/Shared/_Partial/_SweetAlert.cshtml")
    <script>

        function FindPassword() {
            if ($("#email").val() == "") {
                alertFocus("이메일을 입력해주세요", $('#email'));
                return false;
            }

            $("#myform").submit();
        }

    </script>
}