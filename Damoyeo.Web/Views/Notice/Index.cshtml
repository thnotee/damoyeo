<script>
      $(document).ready(function () {
        $(".tabmenu li").click(function () {
          var tab_id = $(this).attr("data-tab");

          $(".detail_tap .tab_content").removeClass("on");
          $("#" + tab_id).addClass("on");

          //꾸며주는 요소
          $(".tabmenu li").removeClass("on");
          $(this).addClass("on");
        });
      });
</script>