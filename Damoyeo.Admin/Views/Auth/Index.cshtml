
@{
    Layout = null;
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>다모여 관리자</title>

    <!-- 파비콘 -->
    <link rel="Shortcut Icon" href="~/Content/images/favicon.ico" />

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/js/ad_common.js"></script>

    <!-- custom -->
    <link rel="stylesheet" href="~/Content/css/font.css" />
    <link rel="stylesheet" href="~/Content/css/ad_common.css" />
    <link rel="stylesheet" href="~/Content/css/ad_login.css" />
</head>
<body>
    <form action="/auth/index" method="post" id="myform">


        <div class="admin_login_wrap">
            <div class="left">
                <img src="~/Content/images/logo.png" alt="" />
                <div class="admin_inner">
                    <p class="login_tit">Welcom back</p>
                    <span class="login_txt">
                        다모여 관리자 아이디와 비밀번호를 입력해주세요.
                    </span>
                    <div class="l_input_box">
                        <span>Id</span>
                        <input type="text"
                               name="email"
                               id="email"
                               placeholder="아이디를 입력해주세요"
                               value="" />
                    </div>
                    <div class="l_input_box">
                        <span>Password</span>
                        <input type="password"
                               name="password"
                               id="password"
                               placeholder="비밀번호를 입력해주세요"
                               value=""
                               onkeyup="" />
                    </div>

                    <a href="javascript:login()" class="login_click" onclick="">로그인</a>
                </div>
            </div>
            <div class="right">
                <img src="~/Content/images/login_img.png" alt="">
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @Html.Partial("~/Views/Shared/_Partial/_SweetAlert.cshtml")

    <script>
        function login() {
            if ($("#email").val() == "") {
                alertFocus("이메일을 입력해주세요", $('#email'));
                return false;
            }

            if ($("#password").val() == "") {
                alertFocus("비밀번호를 입력해주세요", $('#password'));
                return false;
            }
            $("#myform").submit();
        }
    </script>
</body>
</html>
